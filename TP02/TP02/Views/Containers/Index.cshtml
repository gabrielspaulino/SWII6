@model IEnumerable<TP02.Models.Container>

@{
    ViewData["Title"] = "Index";
}

<h1>Containers</h1>

<p>
    <a asp-action="Create">Criar Container</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tamanho)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tamanho)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Numero">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Numero">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Numero">Remover</a>
            </td>
        </tr>
}
    </tbody>
</table>
